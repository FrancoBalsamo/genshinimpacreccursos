<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_horizontal">
            <com.google.android.gms.ads.AdView
                android:id="@+id/banerMainActivity"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:adSize="BANNER"
                app:adUnitId="ca-app-pub-4467142756516555/8035580498">
            </com.google.android.gms.ads.AdView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/logo_gi"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center">
            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/ig_logo"
                android:id="@+id/instagram"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Artefactos"
                android:textColor="@color/white"
                android:id="@+id/artefactos"
                android:fontFamily="@font/sadness"
                android:background="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Builds"
                android:textColor="@color/white"
                android:id="@+id/builds"
                android:fontFamily="@font/sadness"
                android:background="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Importar BackUp"
                android:textColor="@color/white"
                android:id="@+id/hacerBKP"
                android:fontFamily="@font/sadness"
                android:background="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Mis Builds"
                android:textColor="@color/white"
                android:id="@+id/misBuilds"
                android:fontFamily="@font/sadness"
                android:background="@color/black"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
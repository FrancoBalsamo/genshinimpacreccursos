                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Secundario C"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:id="@+id/etRelSecD"
                                android:paddingLeft="10dp"
                                android:background="@drawable/borde_layout_artefactos"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Secundario D"
                                android:textColorHint="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:background="@drawable/borde_layout_artefactos">
                            <Button
                                android:id="@+id/guardarReloj"
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/save"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/borde_layout_artefactos">
                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="250dp"
                            android:gravity="center_horizontal"
                            android:background="@drawable/borde_layout_artefactos">
                            <ImageView
                                android:layout_gravity="center"
                                android:background="@drawable/copico"
                                android:layout_width="50dp"
                                android:layout_height="50dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:orientation="vertical"
                            android:background="@drawable/borde_layout_artefactos">
                            <EditText
                                android:id="@+id/etCopPrin"
                                android:paddingLeft="10dp"
                                android:background="@drawable/borde_layout_artefactos"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Principal"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:id="@+id/etCopSecA"
                                android:paddingLeft="10dp"
                                android:background="@drawable/borde_layout_artefactos"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:hint="Stat Secundario A"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:id="@+id/etCopSecB"
                                android:paddingLeft="10dp"
                                android:background="@drawable/borde_layout_artefactos"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Secundario B"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:id="@+id/etCopSecC"
                                android:paddingLeft="10dp"
                                android:background="@drawable/borde_layout_artefactos"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Secundario C"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:id="@+id/etCopSecD"
                                android:paddingLeft="10dp"
                                android:background="@drawable/borde_layout_artefactos"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Secundario D"
                                android:textColorHint="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:background="@drawable/borde_layout_artefactos">
                            <Button
                                android:id="@+id/guardarCopa"
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/save"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/borde_layout_artefactos">
                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="250dp"
                            android:gravity="center_horizontal"
                            android:background="@drawable/borde_layout_artefactos">
                            <ImageView
                                android:layout_gravity="center"
                                android:background="@drawable/corico"
                                android:layout_width="50dp"
                                android:layout_height="50dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:orientation="vertical"
                            android:background="@drawable/borde_layout_artefactos">
                            <EditText
                                android:id="@+id/etCorPrin"
                                android:paddingLeft="10dp"
                                android:background="@drawable/borde_layout_artefactos"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Principal"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:id="@+id/etCorSecA"
                                android:paddingLeft="10dp"
                                android:background="@drawable/borde_layout_artefactos"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:hint="Stat Secundario A"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:id="@+id/etCorSecB"
                                android:paddingLeft="10dp"
                                android:background="@drawable/borde_layout_artefactos"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Secundario B"

                                android:id="@+id/ivRelojArtefacto"
                                android:layout_width="50dp"
                                android:layout_height="50dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:orientation="vertical"
                            android:background="@drawable/borde_layout_artefactos">
                            <EditText
                                android:id="@+id/etRelPrin"
                                android:paddingLeft="10dp"
                                android:background="@drawable/borde_layout_artefactos"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Principal"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:id="@+id/etRelSecA"
                                android:paddingLeft="10dp"
                                android:background="@drawable/borde_layout_artefactos"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:hint="Stat Secundario A"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:id="@+id/etRelSecB"
                                android:paddingLeft="10dp"
                                android:background="@drawable/borde_layout_artefactos"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Secundario B"
                                android:textColorHint="@color/white"/>
                            <EditText

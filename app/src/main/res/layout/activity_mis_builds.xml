<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividades.MisBuilds"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_horizontal">
            <com.google.android.gms.ads.AdView
                android:id="@+id/banerMisBuilds"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:adSize="BANNER"
                app:adUnitId="ca-app-pub-4467142756516555/2539336534">
            </com.google.android.gms.ads.AdView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/logo_gi"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sadness"
                android:textColor="@color/white"
                android:text="Selecciona un personaje:"/>
            <Spinner
                android:background="@color/black"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:id="@+id/spPJMisBuilds"/>
            <ScrollView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.frabasoft.genshinimpactrecursos.TouchImage.TouchImageView
                        android:id="@+id/imgPJMisBuilds"
                        android:src="@drawable/wallpaper"
                        android:layout_width="match_parent"
                        android:layout_height="400dp">
                    </com.frabasoft.genshinimpactrecursos.TouchImage.TouchImageView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/anemoColor">
                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="250dp"
                            android:gravity="center_horizontal">
                            <ImageView
                                android:layout_gravity="center"
                                android:background="@drawable/florico"
                                android:layout_width="50dp"
                                android:layout_height="50dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:orientation="vertical">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Principal"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:hint="Stat Secundario A"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Secundario B"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Secundario C"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Secundario D"
                                android:textColorHint="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal">
                            <Button
                                android:id="@+id/guardarFlor"
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/save"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/cryoColor">
                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="250dp"
                            android:gravity="center_horizontal">
                            <ImageView
                                android:layout_gravity="center"
                                android:background="@drawable/plumico"
                                android:layout_width="50dp"
                                android:layout_height="50dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:orientation="vertical">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Principal"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:hint="Stat Secundario A"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Secundario B"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Secundario C"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Secundario D"
                                android:textColorHint="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal">
                            <Button
                                android:id="@+id/guardarPluma"
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/save"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/electroColor">
                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="250dp"
                            android:gravity="center_horizontal">
                            <ImageView
                                android:layout_gravity="center"
                                android:background="@drawable/relico"
                                android:layout_width="50dp"
                                android:layout_height="50dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:orientation="vertical">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Principal"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:hint="Stat Secundario A"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Secundario B"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Secundario C"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Secundario D"
                                android:textColorHint="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal">
                            <Button
                                android:id="@+id/guardarReloj"
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/save"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/geoColor">
                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="250dp"
                            android:gravity="center_horizontal">
                            <ImageView
                                android:layout_gravity="center"
                                android:background="@drawable/copico"
                                android:layout_width="50dp"
                                android:layout_height="50dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:orientation="vertical">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Principal"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:hint="Stat Secundario A"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Secundario B"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Secundario C"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Secundario D"
                                android:textColorHint="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal">
                            <Button
                                android:id="@+id/guardarCopa"
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/save"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/hydroColor">
                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="250dp"
                            android:gravity="center_horizontal">
                            <ImageView
                                android:layout_gravity="center"
                                android:background="@drawable/corico"
                                android:layout_width="50dp"
                                android:layout_height="50dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:orientation="vertical">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Principal"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:hint="Stat Secundario A"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Secundario B"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Secundario C"
                                android:textColorHint="@color/white"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:hint="Stat Secundario D"
                                android:textColorHint="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal">
                            <Button
                                android:id="@+id/guardarCorona"
                                android:layout_gravity="center"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/save"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:background="@color/pyroColor">
                        <Button
                            android:id="@+id/guardarTodo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/save"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>